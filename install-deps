#!/bin/bash

for BIN in pkg-config curl cmake xxd
do
    if ! type $BIN >/dev/null; then
        echo "Please, install $BIN." >&2
        exit 1
    fi
done

(
    # Change dir to script's
    {
        src="${BASH_SOURCE[0]}"
        while [[ -L ${src} ]]; do
            # shellcheck disable=SC1117
            src=$(find "${src}" -type l -ls | sed -n 's/^.* -> \(.*\)/\1/p')
        done
        dir=$(cd -P "$(dirname "${src}")" && pwd)
        cd $dir || exit 1
    }

    if ! pkg-config --exists --print-errors libxxhash; then
        ./install-xxhash
    fi
)

bash -c "$(curl -fsSL https://git.io/Jz7Oa)" -s horta/hope || exit 1
